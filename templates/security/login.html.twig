{% extends 'base.html.twig' %}

{% block title %}connexion{% endblock %}

{% block body %}
<div class="block">
    <h2 class="pb-30">connexion </h2>
    <form action="{{ path('login') }}" method="post" >
        <div class="form-row">
            <label for="email">Email</label>
            <input type="text" name="_username" value='{{ username }}' id="email" autofocus >
        </div>
        <div class="form-row">
            <label for="password">Mot de passe </label>
            <input type="password" name="_password"  id="password"  >
        </div>
        {# pour activer le token remeber_me #}
        <div class="form-row">
            <label for="remeber_me">
            <input type="checkbox" name="_remeber_me"  id="remeber_me"  >
            Se souvenir de moi  </label>
        </div>
         {# pour activer le token csrf #}
        <input type="hidden" name="_csrf_token" value='{{ csrf_token('authenticate') }}' id="">
            {%- if error -%}
                <ul class='form-errors pb-20'>        
                        <li>{{ error.messageKey| trans(error.messageData, 'security') }}</li>
                </ul>
            {%- endif -%}
        <div class="d-flex flex-row">
            <button class='btn btn-primary mr-20'> Connexion </button>
            <div class="d-flex flex-column">
                <small><a href="{{ path('signup')}}"> Vous n'avez pas encore de compte ?</a> </small>
                <small><a href="{{ path('reset-password-request')}}"> Vous avez oubli√© votre mot de passe ?</a> </small>
            </div>
        </div>
    </form>
</div>

{% endblock %}
