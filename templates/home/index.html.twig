{% extends 'base.html.twig' %}

{% block title %}Wonder
{% endblock %}

{% block body %}
 <ul>
  {% for  question in questions %}
  <a href= {{ path('question_show',{id:question.id}) }} class="block  block-shadow d-flex flex-row mb-10">
    <div class='d-flex flex-column mr-20 align-items-center'>
      <i class="fa-regular fa-thumbs-up {{ question.rating > 0 ?'rating-up' : '' }}"></i>
      <p class='text-small {{ question.rating > 0 ? 'rating-up': question.rating < 0 ? 'rating-down': '' }}'>{{question.rating}}</p>
      <i class="fa-regular fa-thumbs-down {{ question.rating < 0 ?'rating-down' : '' }}"></i>
    </div>

    <div class="flex-fill d-flex flex-column">
      <div class='question-content mb-20 pb-20'>
        <h3 class='mb-20'>{{question.title}}</h3>
        <p class='mb-20'>{{question.content}}</p>
      </div>
      <div class="d-flex flex-row justify-content-between">
        <div class="d-flex flex-row align-items-center">
          <img class='avatar mr-10'src={{question.auteur.avatar}} alt={{question.auteur.nom}}>
          <small>Demand√© par <span class='clickable'>{{question.auteur.nom}}</span></small>
        </div>
        <div class='d-flex flex-row align-items-center'>
          <i class="far fa-comment mr-10"></i>
          <p>{{question.nombreOfResponse}}</p>
        </div>
      </div>
    </div>
  </a>
  {% endfor %}
</ul>
{% endblock %}