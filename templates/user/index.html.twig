{% extends 'base.html.twig' %}

{% block title %}Mon profile {% endblock %}

{% block body %}
<div class="block mb-20">
    <h2 class='pb-20'>Page de profile</h2>
    {{ form_start(form) }}    
    {{ form_rest(form) }} 
    <button class="btn btn-primary mr-20"> Mettre à joutr</button> 
      
    {{ form_end(form) }}  
</div>
<div class="block mb-20">
    <h3 class='pb-30'>Mes questions</h3>
        <ul>
        {% for question in app.user.questions %}
           <li>
                <small><i class="fa-sharp fa-solid fa-pen-nib"></i></small>
                {{ question.title }}
            </li> 
        {% endfor %}
        </ul>
</div>

<div class="block">
    <h3 class='pb-30'>Mes réponses</h3>
        <ul>
        {% for comment in app.user.comments %}
           <li>
                <small><i class="fa-sharp fa-solid fa-pen-nib"></i></small>
                {{ comment.content |slice(0, 60)}} ...
            </li> 
        {% endfor %}
        </ul>
</div>
{% endblock %}
