<header class="d-flex flex-row-nowrap justify-content-center p-20">
  <div class="content flex-fill d-flex flex-row-nowrap align-items-center justify-content-between">
    <a class="header-logo" href="{{ path('home') }}">
      <img src="{{ asset('images/logo.png')}}">
    </a>
    <div class="header-search p-10 flex-fill d-flex flex-row">
      <i class="fa-solid fa-search mr-10 p-5"></i>
      <input type="text" class='flex-fill'>
    </div>
    {%- if is_granted('IS_AUTHENTICATED_FULLY') -%}
        <div class="hide-xs">
          <a href="{{ path('current_user')}}">
            <img src="{{ app.user.picture }}" class=' avatar-lg'>
          </a>
          <small><a href="{{ path('logout') }}" class="btn-out btn-primary-stroke">Déconnexion</a></small>
        </div>
      {% else %}
      <div class='hide-xs'>
        <a href='{{ path('signup') }}' class="btn btn-primary mr-5">Inscription</a>
        <a href='{{ path('login') }}' class="btn btn-primary-stroke">Connexion</a>
      </div>
    {%- endif -%}
      <div class="show burger">
        <i class="fa-solid fa-bars"></i>
      </div>
  </div>
</header>

<div class="menu-xs d-flex flex-column hidden">
    {%- if is_granted('IS_AUTHENTICATED_FULLY') -%}
      <a href="{{ path('current_user') }}" class="">Profil</a>
      <a href="{{ path('logout') }}" class="">Déconnexion</a>

    {% else %}
      <a href='{{ path('signup') }}' class="btn btn-primary mr-5">Inscription</a>
      <a href='{{ path('login') }}' class="btn btn-primary-stroke">Connexion</a>
    {%- endif -%}

</div>